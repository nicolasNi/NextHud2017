<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
      <ImageView
        android:id="@+id/pwd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="420dip"
        android:layout_y="58dip"
        android:src="@drawable/bluetooth" />

    <TextView
        android:id="@+id/tv_bt_passwd"
        android:layout_width="120dip"
        android:layout_height="34dip"
        android:layout_x="300dip"
        android:layout_y="58dip"
        android:background="#000000"
        android:textColor="#17a9c8"
        android:rotationY="180"
        android:text="蓝牙密码"
        android:textSize="16sp" />
    
    <EditText
            android:id="@+id/pwd_txt"
            android:layout_width="150dip"
            android:layout_height="40dp"
            android:layout_x="185dip"
            android:layout_y="54dip" 
            android:drawablePadding="8dp" 
           	android:text="1234"
            android:rotationY="180"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="21sp" />
    
    
    <ImageView
        android:id="@+id/bluetooth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_x="420dip"
        android:layout_y="95dip"
        android:src="@drawable/bluetooth" />

    <TextView
        android:id="@+id/tv_bonded_devices"
        android:layout_width="300dip"
        android:layout_height="25dip"
        android:layout_x="120dip"
        android:layout_y="95dip"
        android:background="#000000"
        android:rotationY="180"
        android:text="已配对蓝牙设备"
        android:textSize="16sp" />

    <View
        android:layout_width="300dip"
        android:layout_height="0.5dp"
        android:layout_x="120dip"
        android:layout_y="121dip"
        android:background="#FFFFFF" />

    <ListView
        android:id="@+id/list_bonded_devices"
        android:layout_width="300dip"
        android:layout_height="80dip"
        android:layout_x="120dip"
        android:layout_y="120dip"
        android:divider="@color/item_focuse"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_track"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_x="420dip"
        android:layout_y="167dip"
        android:src="@drawable/search" />

    <TextView
        android:id="@+id/tv_search_devices"
        android:layout_width="300dip"
        android:layout_height="25dip"
        android:layout_x="116dip"
        android:layout_y="167dip"
        android:background="#000000"
        android:rotationY="180"
        android:text="搜索到的蓝牙设备"
        android:textSize="16sp" />

    <View
        android:layout_width="300dip"
        android:layout_height="0.5dp"
        android:layout_x="120dip"
        android:layout_y="197dip"
        android:background="#FFFFFF" />

    <ListView
        android:id="@+id/list_search_devices"
        android:layout_width="300dip"
        android:layout_height="80dip"
        android:layout_x="120dip"
        android:layout_y="202dip"
        android:divider="@color/item_focuse"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_track"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll" />

</AbsoluteLayout>